doctype html
html(lang='pt-br')
    head
        meta(charset='UTF-8')
        meta(http-equiv='x-ua-compatible', content='ie=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Rapiddo Prime - Escolha seu benefício

        // CSS Files
        link(rel='stylesheet', href='sources/styles/main.css')

    body.preferencias
        header
            h1 Rapiddo Prime
            h2 Marque seus benefícios favoritos
            p Selecione uma ou mais opções.

        // Produtos
        section.products
            form(id='form-prefs', action='thanks.html', method='POST')
                // Tickets
                input(type='checkbox', id='pick-tickets', name='Tickets (brand)', value='Tickets (brand)')
                label(for='pick-tickets')
                    .inputs.tickets
                        .brand
                            img(src='sources/images/brands-ingresso.png')
                        h4 Ingressos antecipados

                // Comida
                input(type='checkbox', id='pick-food', name='Food (brand)', value='Food (brand)')
                label(for='pick-food')
                    .inputs.food
                        .brand
                            img(src='sources/images/brands-ifood.png')
                        h4 Não pagar pelo frete
                            

                // Música
                input(type='checkbox', id='pick-music', name='Music (brand)', value='Music (brand)')
                label(for='pick-music')
                    .inputs.music
                        .brand
                            img(src='sources/images/brands-superplayer.png')
                        h4 Streaming Prime grátis

                // Kids
                input(type='checkbox', id='pick-kids', name='Kids (brand)', value='Kids (brand)')
                label(for='pick-kids')
                    .inputs.kids
                        .brand
                            img(src='sources/images/brands-playkids.png')
                        h4 Conteúdo infantil

                // Recarga
                input(type='checkbox', id='pick-recharge', name='Recharge (brand)', value='Recharge (brand)')
                label(for='pick-recharge')
                    .inputs.recharge
                        .brand
                            img(src='sources/images/brands-recarga.png')
                        h4 Recarregue e ganhe 10%

        // Footer
        footer
            a(href='share.html', onclick="ga('send', 'event', '[btn] Escolhi', 'click', '2o Funil');").cta-button Escolher e continuar

        script(type='text/javascript').
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-93185721-1', 'auto');
            ga('send', 'pageview');
        
        script(src='sources/js/jquery.min.js', type='text/javascript')
        script(type='text/javascript').
            $(".cta-button").on( "click", function() {
                var inputs = $("input:checked");
                
                for (i = 0; i < inputs.length; i++) {
                    ga('send', 'event', '[picked]', inputs[i].name);
                }

                document.getElementById("form-prefs").submit();
                return false;
                
            });