doctype html
html(lang='pt-br')
    head
        meta(charset='UTF-8')
        meta(http-equiv='x-ua-compatible', content='ie=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title Rapiddo Prime

        // CSS Files
        link(rel='stylesheet', href='resources/css/swiper.css')
        link(rel='stylesheet', href='resources/css/main.css')

        // Facebook
        meta(property='og:url', content='http://thiago-rocha-movile.github.io/rapiddo/')
        meta(property='og:type', content='website')
        meta(property='og:title', content='Rapiddo')
        meta(property='og:description', content='Rapiddo - Seja rápido e tenha vantagens exclusivas')
        meta(property='og:image', content='http://thiago-rocha-movile.github.io/rapiddo/sources/images/share.png')

    body
        // Header
        header
            h1 Rapiddo
            ul.nav
                li.delivery.active(data-slide='1')
                    img(src="resources/img/icons-food.png", alt="Delivery")
                    | Comida

                li.music(data-slide='2')
                    img(src="resources/img/icons-music.png", alt="Música")
                    | Música

                li.tickets(data-slide='3')
                    img(src="resources/img/icons-tickets.png", alt="Ingresso")
                    | Ingresso

                li.kids(data-slide='4')
                    img(src="resources/img/icons-kids.png", alt="Infantil")
                    | Infantil

                li.recharge(data-slide='5')
                    img(src="resources/img/icons-recharge.png", alt="Recarga")
                    | Recarga

        // Slides
        section.slides
            .swiper-container
                .swiper-wrapper
                    // Food
                    .swiper-slide.food
                        h2 Sua pizza em 30 minutos em um clique

                    // Music
                    .swiper-slide.music
                        h2 Ouça suas bandas favoritas sem pagar e na ordem que quiser

                    // Tickets
                    .swiper-slide.tickets
                        h2 Acesso aos melhores eventos em um clique

                    // Kids
                    .swiper-slide.kids
                        h2 Acesso a videos exclusivos para seus filhos

                    // Recharge
                    .swiper-slide.recharge
                        h2  Recarregue seu celular  mais rápido e barato

                .swiper-pagination
                

        // Main
        section.main
            .vantagens
                h3 Seja rápido e tenha vantagens exclusivas em nossos serviços.

            .servicos
                h4 Em apenas um clique
                ul
                    li
                        img(src="resources/img/footer-tickets.png", alt="Ingresso")
                        | Melhores Eventos

                    li
                        img(src="resources/img/footer-food.png", alt="Delivery")
                        | Entrega Rápida

                    li
                        img(src="resources/img/footer-kids.png", alt="Infantil")
                        | Desenhos Infantis

                    li
                        img(src="resources/img/footer-music.png", alt="Música")
                        | Músicas Grátis

                    li
                        img(src="resources/img/footer-recharge.png", alt="Recarga")
                        | Recarga Barata

        // Footer
        footer
            a(href='preferencias.html', onclick="ga('send', 'event', '[btn] Eu quero', 'click', '1o Funil');").cta-button Eu quero!

        script(src='resources/js/jquery.js', type='text/javascript')
        script(src='resources/js/swiper.js', type='text/javascript')
        script(type='text/javascript').
            $(document).ready(function () {
                var mySwiper = new Swiper ('.swiper-container', {
                    direction: 'horizontal',
                    loop: true,
                    initialSlide: 0,
                    speed: 400,
                    autoHeight: true,
                    watchSlidesVisibility: true,
                    simulateTouch: true,
                    preventClicks: true,
                    autoplay: 3000
                })

                function toggleClass() {
                    $('.nav > li').removeClass('active');
                    $(this).addClass('active');
                }

                $('.nav > li[data-slide]').on('click', function () {
                    mySwiper.slideTo($(this).data('slide'));
                    toggleClass();
                })
            });

