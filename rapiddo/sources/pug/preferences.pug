        // Header
        header
            h1 Rapiddo Prime

        // Main
        #main
            .wrapper
                h2 Qual sua preferência?
                p Selecione uma ou mais opções.

                form(action='', method='POST')
                    #products
                        // Tickets
                        input(type='checkbox', id='pick-tickets', name='entry.858755329', value='Tickets')
                        label(for='pick-tickets')
                            .cards.tickets
                                .logo
                                h3 Ingressos antecipados

                        // Food
                        input(type='checkbox', id='pick-food', name='entry.858755329', value='Food')
                        label(for='pick-food')
                            .cards.food
                                .logo
                                h3 Não pagar pelo frete

                        // Music
                        input(type='checkbox', id='pick-music', name='entry.858755329', value='Music')
                        label(for='pick-music')
                            .cards.music
                                .logo
                                h3 Streaming prime grátis

                        // Kids
                        input(type='checkbox', id='pick-kids', name='entry.858755329', value='Kids')
                        label(for='pick-kids')
                            .cards.kids
                                .logo
                                h3 Vídeos kids free 

                        // Recharge
                        input(type='checkbox', id='pick-recharge', name='entry.858755329', value='Recharge')
                        label(for='pick-recharge')
                            .cards.recharge
                                .logo
                                h3 Recarregue e ganhe 10%

                    // Footer
                    footer
                        button(type='submit').btn-cta Escolher e continuar

